pipeline {
    agent any
    environment {
        RELEASE = '20.0.4'
    }

    stages {
        stage('Build') {
            environment {
                LOG_LEVEL = 'INFO'
            }
            parallel {
                stage('linux-arm64') {
                    agent any
                    steps {
                        echo "Build release ${RELEASE} for stage ${STAGE_NAME} with log level ${LOG_LEVEL}"
                    }
                }
                stage('linux-amd64') {
                    agent any
                    steps {
                        echo "Build release ${RELEASE} for stage ${STAGE_NAME} with log level ${LOG_LEVEL}"
                    }
                }
                stage('windows-amd64') {
                    agent any
                    steps {
                        echo "Build release ${RELEASE} for stage ${STAGE_NAME} with log level ${LOG_LEVEL}"
                    }
                }
            }
        }
        stage('Test'){
            steps{
                echo "Testing release ${RELEASE}...."
            }
        }
        stage('Deploy'){
            input {
                message 'Deploy?'
                ok 'Do It!!'
                parameters {
                    choice(choices: ['DEV','UAT','PROD'],
                           description: 'Taget Deployment Environment'),
                           name: 'TARGET_ENVIRONMENT'
                }
            }
            steps {
                echo "Deploying release ${RELEASE} to ${TARGET_ENVIRONMENT}"
            }
        }
    }

    post {
        always {
            echo "This block will execute irrespective of build status"
        }
    }
}
