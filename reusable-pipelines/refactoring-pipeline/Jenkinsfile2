pipeline{

    agent any
    environment{
        VERSION = '1.0.0'
        RELEASE_VERSION = 'R.2'
    }

    stages{

        stage('Audit Tools'){
            steps{
                sh '''
                    git version
                    java -version
                    mvn -version
                '''
            }
        }

        stage('Unit Tests'){
            steps{
                dir('./java-tomcat-sample'){
                    sh '''
                        echo "Executing Unit Tests......"
                        mvn test
                    '''
                }
            }
        }

        stage('Build'){
            steps{
                dir('./java-tomcat-sample'){
                    sh """
                        mvn versions:set -D newVersion=${VERSION}-SNAPSHOT
                        mvn versions:update-child-modules
                        mvn clean package
                    """
                }
            }
        }
    }
}