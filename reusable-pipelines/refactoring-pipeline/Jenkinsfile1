pipeline{
    agent any
    environment{
        VERSION = '0.1.0'
        RELEASE_VERSION = 'R.2'
    }

    stages{
        stage('Audit Tools'){
            steps{
                sh '''
                    git version
                    mvn -version
                    java -version
                '''
            }
        }

        stage('Test'){
            steps{
                dir('./java-tomcat-sample'){
                    sh '''
                        echo "Executing Unit Test"
                        mvn test
                    '''
                }
            }
        }

        stage('Build'){
            steps{
                sh '''
                    echo "Building project"
                    mvn -f java-tomcat-sample/pom.xml clean package
                '''
            }
        }
    }

    post{
        suceess{
            archiveArtifacts artifacts: 'java-tomcat-sample/target/*.jar', followSymlinks: false
        }
    }
}